<% include partials/header %>
    <div class="container">
        <h1 class="header">Click a assignment to download</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i<assignments.length;i++) { %>
                    <tr>
                        <td><a href="/download/<%=assignments[i]._id%>"><%= assignments[i].title %></a></td>
                    </tr>    
                <% } %>
                </tbody> 
        </table>
    </div>
<% include partials/footer %>